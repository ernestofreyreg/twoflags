{
  "title": "Flag",
  "type": "object",
  "description": "Describes a single flag, Each Flag may or not contain a value (or multiple values if segmentacion is present) per Environment / Namespace.\n\nTypes can be: string, boolean, number, apikey, date\n",
  "x-examples": {
    "example-1": {
      "id": "maintenance",
      "type": "boolean",
      "name": "Site Maintenance",
      "description": "Puts web site on maintenance mode"
    },
    "example-2": {
      "id": "intercomid",
      "type": "apikey",
      "name": "Intercom ID",
      "description": "Intercom API Key"
    },
    "example-3": {
      "id": "deployed-commit",
      "type": "string",
      "name": "Frontend deployed commit hash",
      "description": "Selects what commit is used on Frontend",
      "select": [
        {
          "label": "28 Feb 2020 noon",
          "value": "299dacf08"
        },
        {
          "label": "27 Feb 2020 03:08PM",
          "value": "87afc238"
        }
      ]
    }
  },
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "selector": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string"
          },
          "label": {
            "type": "string"
          }
        }
      }
    }
  }
}